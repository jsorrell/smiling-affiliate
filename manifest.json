{
	"manifest_version": 2,

	"name": "Getting started example",
	"description": "Chrome extension to redirect Amazon links to Amazon Smile with the option to use affiliate links",
	"version": "1.0",
	"background": {
			"scripts": ["redirect.js"]
	},
	 "options_page": "options.html",
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"https://*.amazon.com/"
	]
}
